<div id="myCarousel" class="carousel slide">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <% images = ['http://www.goridebicycles.com/goride/wp-content/uploads/2012/11/MTN-11.jpg', 'http://www.goridebicycles.com/goride/wp-content/uploads/2012/07/SAGAN.jpg', 'http://www.goridebicycles.com/goride/wp-content/uploads/2012/03/Ban-Tall-boy.jpg'] %>
  <% i = 0 %>
  <div class="carousel-inner">
    <% images.each do |url| %>
    <div class="item<%= if i == 0 then ' active' end %>">
      <% i += 1 %>
      <div class="fill" style="background-image:url('<%= url %>');"></div>
      <div class="carousel-caption">
        <h1>Caption</h1>
      </div>
    </div>
    <% end %>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="icon-prev"></span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="icon-next"></span>
  </a>
</div>

